// buscaproducto.php
<?php
include ('conexion.php');

$cod = $_GET['ean'];

$consulta = "SELECT * from productos WHERE ean = '$cod'";
$resultado = $conexion -> query($consulta);

while ($fila=$resultado -> fetch_array()) {
	$producto[] = array_map('utf8_encode', $fila);
}

echo json_encode($producto);
$resultado -> close();
?>
/// fin linea de codigo
-------------------------------------------------------
